<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_start_screen"
    tools:context="com.nick.hangman.StartActivityFragment"
    tools:showIn="@layout/activity_start">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/logo_height"
        android:paddingLeft="64dp"
        android:paddingRight="64dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_logo"
            android:id="@+id/imageLogo"
            android:scaleType="fitCenter"
            android:layout_gravity="center" />

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textPlayLayout"
        android:gravity="center">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imagePlayLayout"
        android:gravity="center_horizontal">

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/waitIcon"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
